{
  "name": "sv-card-name-quiz",
  "version": "0.0.1",
  "description": "",
  "author": {
    "name": "ytoune"
  },
  "engines": {
    "node": ">= 18"
  },
  "packageManager": "yarn@1.22.21",
  "volta": {
    "node": "18.18.2",
    "yarn": "1.22.21"
  },
  "license": "MIT",
  "private": true,
  "scripts": {
    "build": "rimraf dist && vite build",
    "dev": "vite",
    "codegen": "rimraf data src/gen && yarn ts-node scripts/fetch-cards && yarn ts-node scripts/fetch-sets && yarn ts-node scripts/gen-cards",
    "test": "prettier -c . && eslint && tsc --noEmit && vitest run --passWithNoTests",
    "ts-node": "node -r esbuild-register",
    "ui": "shadcn-ui"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.300.0",
    "tailwind-merge": "^2.2.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@preact/preset-vite": "^2.7.0",
    "@types/jest": "^29.5.8",
    "@types/jsdom": "^21.1.5",
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "cross-env": "^7.0.3",
    "cross-fetch": "^4.0.0",
    "dayjs": "^1.11.10",
    "esbuild": "^0.19.10",
    "esbuild-register": "^3.5.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-github": "^4.10.1",
    "eslint-plugin-import": "^2.29.1",
    "jsdom": "^22.1.0",
    "preact": "^10.19.2",
    "prettier": "^3.1.1",
    "rimraf": "^5.0.5",
    "shadcn-ui": "0.5.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-tsconfig-paths": "^4.2.2",
    "vitest": "^1.1.0"
  },
  "prettier": {
    "useTabs": false,
    "singleQuote": true,
    "trailingComma": "all",
    "semi": false,
    "arrowParens": "avoid"
  },
  "eslintConfig": {
    "ignorePatterns": [
      "/.cache",
      "/.swc",
      "/.yarn",
      "/data",
      "/dist",
      "/node_modules",
      "/scripts/sandbox*",
      "/src/components",
      "/src/gen",
      "/src/lib"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "project": "./tsconfig.json",
      "sourceType": "module"
    },
    "settings": {
      "import/resolver": {
        "typescript": {
          "alwaysTryTypes": true
        }
      }
    },
    "env": {
      "node": true,
      "jest": true
    },
    "plugins": [
      "@typescript-eslint",
      "import",
      "github"
    ],
    "extends": [
      "prettier",
      "plugin:import/typescript",
      "plugin:github/recommended",
      "plugin:github/typescript"
    ],
    "rules": {
      "yoda": [
        "error",
        "always",
        {
          "exceptRange": true
        }
      ],
      "complexity": [
        "error",
        20
      ],
      "prefer-arrow-callback": "error",
      "arrow-body-style": [
        "error",
        "as-needed"
      ],
      "func-style": [
        "error",
        "expression"
      ],
      "no-console": "off",
      "no-negated-condition": "off",
      "eslint-comments/no-use": "off",
      "eslint-comments/no-unlimited-disable": "off",
      "eslint-comments/no-duplicate-disable": "off",
      "import/order": "error",
      "import/no-default-export": "off",
      "import/no-cycle": "off",
      "import/no-namespace": "off",
      "github/no-then": "off",
      "i18n-text/no-en": "off",
      "@typescript-eslint/array-type": [
        "error",
        {
          "default": "array"
        }
      ],
      "@typescript-eslint/strict-boolean-expressions": "off",
      "@typescript-eslint/restrict-template-expressions": [
        "error",
        {
          "allowNumber": true
        }
      ],
      "@typescript-eslint/no-shadow": "off",
      "@typescript-eslint/consistent-type-imports": [
        "error",
        {
          "fixStyle": "separate-type-imports"
        }
      ]
    }
  }
}
