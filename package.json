{
	"name": "sv-card-name-quiz",
	"version": "0.0.1",
	"description": "",
	"author": {
		"name": "ytoune"
	},
	"engines": {
		"node": ">= 16"
	},
	"license": "MIT",
	"private": true,
	"scripts": {
		"build": "rimraf dist && cp -r statics dist && NODE_ENV=production npm run ts-node scripts/build.ts",
		"dev": "rimraf dist && cp -r statics dist && NODE_ENV=development npm run ts-node scripts/build.ts",
		"codegen": "rimraf data src/gen && npm run ts-node scripts/fetch-cards && npm run ts-node scripts/gen-cards",
		"test": "eslint '**/*.{ts,tsx}' && tsc --noEmit && jest --passWithNoTests",
		"ts-node": "node -r esbuild-register"
	},
	"devDependencies": {
		"@herp-inc/eslint-config": "0.18.0",
		"@swc/core": "1.2.194",
		"@swc/jest": "0.2.21",
		"@types/jest": "27.5.1",
		"@types/node": "17.0.35",
		"@typescript-eslint/eslint-plugin": "5.26.0",
		"@typescript-eslint/parser": "5.26.0",
		"cross-fetch": "3.1.5",
		"dayjs": "1.11.7",
		"esbuild": "0.14.39",
		"esbuild-register": "3.3.2",
		"eslint": "8.16.0",
		"eslint-config-prettier": "8.5.0",
		"eslint-import-resolver-typescript": "2.7.1",
		"eslint-plugin-import": "2.26.0",
		"jest": "28.1.0",
		"preact": "10.7.2",
		"prettier": "2.6.2",
		"rimraf": "3.0.2",
		"typescript": "4.7.2"
	},
	"jest": {
		"extensionsToTreatAsEsm": [
			".ts",
			".tsx"
		],
		"transform": {
			"^.+\\.(js|jsx|ts|tsx)$": [
				"@swc/jest",
				{
					"jsc": {
						"parser": {
							"syntax": "typescript"
						}
					}
				}
			]
		},
		"projects": [
			"<rootDir>"
		],
		"moduleNameMapper": {
			"^~/(.*)$": "<rootDir>/src/$1"
		}
	},
	"prettier": {
		"useTabs": true,
		"singleQuote": true,
		"trailingComma": "all",
		"semi": false,
		"arrowParens": "avoid",
		"overrides": [
			{
				"files": [
					"*.md",
					"*.yml",
					"*.yaml"
				],
				"options": {
					"useTabs": false
				}
			}
		]
	}
}
